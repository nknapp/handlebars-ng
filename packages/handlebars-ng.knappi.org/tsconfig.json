{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"] 
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "types/*"
  ]
}