---
import TocItem from "./TocItem.astro";

const allPages = await Astro.glob("../../pages/spec/**/*.(mdx|md)");
const specPages = allPages.filter((page) => {
  return page.url !== "/spec";
});
---

<ul class="sticky top-1 pl-1">
  {
    specPages.map((page) => {
      return (
        <li class="p-1">
          <TocItem href={page.url} text={page.frontmatter.title as string} />
        </li>
      );
    })
  }
</ul>
