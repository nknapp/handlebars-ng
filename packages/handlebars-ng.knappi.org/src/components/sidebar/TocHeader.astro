---
export interface Props {
  text?: string;
  href?: string | undefined;
}

const { href, text } = Astro.props;

const active = href != null && Astro.url.pathname.startsWith(href)
const activeClass = active ? "font-bold" : ""
---

<header class={"text-lg mb-2 mt-6 first:mt-0 "+ activeClass}><a class="text-black underline" href={href}>{text}</a></header>
