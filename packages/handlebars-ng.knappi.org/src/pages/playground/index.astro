---
import SidebarContents from "@/components/sidebar/SidebarContents.astro";
import DefaultLayout from "@/layouts/default/DefaultLayout.astro";
import { Playground } from "@handlebars-ng/playground";
import "@handlebars-ng/playground/dist/style.css";
---

<DefaultLayout title="Playground" section="Playground">
  <div slot="sidebar">
    <SidebarContents />
  </div>
  <h1>Playground</h1>
  <p>Use this page to play with Handlebars-NG</p>
  <p
    class="my-5 text-red-500 border border-red-500 p-5 text-xl text-center rounded-xl"
  >
    Playground is still under construction! More features will follow.
  </p>
  <div class="my-4">
    <Playground client:only />
  </div>
</DefaultLayout>
