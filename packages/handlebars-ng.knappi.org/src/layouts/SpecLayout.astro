---
import SidebarContents from "@/components/sidebar/SidebarContents.astro";

import type { MarkdownLayoutProps } from "astro";
import Layout from "./default/DefaultLayout.astro";

type Props = MarkdownLayoutProps<{
  title: string;
}>;

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} section="Language specification">
  <div slot="sidebar">
    <SidebarContents />
  </div>
  <slot />
</Layout>

<style lang="scss" is:global>
  .grammar {
    .nonterminal {
      font-style: italic;
    }

    .unicode-character-literal,
    .terminal,
    .keyword {
      font-weight: bold;
    }

    .punctuation {
    }

    .rhs,
    .one-of-list {
      display: block;
      margin-left: 5rem;
    }

    .prose {
      font-family: serif;
    }
  }
</style>
