    "@handlebars-ng/specification": "0.0.1",
    "codemirror": "5.65.13",
    "comlink": "4.4.1",
    "handlebars": "4.7.7",
    "json5": "^2.2.3",
    "prettier": "2.8.8",
    "solid-js": "1.7.5"
