{
  "name": "@handlebars-ng/specification",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test:types": "tsc --noEmit",
    "test:unit": "vitest --run",
    "build": "vite-node scripts/build-testcases.ts",
    "test-and-build": "yarn test:unit && yarn build && yarn test:types",
    "generate": "concurrently npm:generate:*",
    "generate:ast-schema": "scripts/create-json-schema.sh types/ast.d.ts Program src/pages/spec/schema/ast.json",
    "generate:spec-schema": "scripts/create-json-schema.sh types/tests.d.ts HandlebarsTest src/pages/spec/schema/testcase.json",
    "dev:server": "astro dev",
    "dev:unit": "vitest --ui",
    "dev": "concurrently -k npm:dev:*",
    "site:preview": "astro preview",
    "site:build":"astro build",
    "astro": "astro"
  },
  "files": [
    "ast.d.ts",
    "tests.d.ts",
    "types",
    "tests.mjs"
  ],
  "dependencies": {
    "@astrojs/mdx": "^0.12.2",
    "@astrojs/prism": "^1.0.2",
    "@astrojs/tailwind": "^2.1.3",
    "astro": "^1.6.15",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@types/prettier": "^2.7.1",
    "@vitest/ui": "^0.25.7",
    "concurrently": "^7.6.0",
    "del": "^7.0.0",
    "globby": "^13.1.3",
    "handlebars": "^4.7.7",
    "json-schema-to-typescript": "^11.0.2",
    "prettier": "^2.8.1",
    "ts-json-schema-generator": "^1.1.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vite-node": "^0.25.7",
    "vite-plugin-dts": "^1.7.1",
    "vitest": "^0.25.8"
  }
}
