{
  "name": "@handlebars-ng/specification",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "concurrently -m 1 npm:test:*",
    "test:lint": "eslint .",
    "test:unit": "vitest --run",
    "test:types": "tsc --noEmit",
    "test-and-build": "yarn test && yarn build",
    "generate": "concurrently npm:generate:*",
    "generate:ast-schema": "scripts/create-json-schema.sh types/ast.d.ts Program src/spec/schema/ast.json",
    "generate:spec-schema": "scripts/create-json-schema.sh types/tests.d.ts HandlebarsTest src/spec/schema/testcase.json",
    "generate:invalid-id-tests": "vite-node scripts/generate-invalid-id-tests.ts",
    "dev:unit": "vitest --ui",
    "dev:types": "tsc --noEmit --watch",
    "dev": "concurrently -k npm:dev:*",
    "auto-complete-tests": "vite-node scripts/add-results-to-tests.ts",
    "clean": "rm dist -rf"
  },
  "files": [
    "ast.d.ts",
    "tests.d.ts",
    "types",
    "tests.mjs"
  ],
  "devDependencies": {
    "@handlebars-ng/eslint-plugin": "0.0.1",
    "@handlebars-ng/common-dev": "0.0.1",
    "@handlebars/parser": "2.1.0",
    "@vitest/ui": "0.28.3",
    "concurrently": "7.6.0",
    "globby": "13.1.3",
    "handlebars": "4.7.7",
    "json-schema-to-typescript": "11.0.3",
    "jsonschema": "1.4.1",
    "prettier": "2.8.3",
    "ts-json-schema-generator": "1.2.0",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vite-node": "0.28.3",
    "vite-plugin-dts": "1.7.1",
    "vitest": "0.28.3"
  },
  "dependencies": {
    "@handlebars-ng/abstract-syntax-tree": "0.0.1"
  }
}
