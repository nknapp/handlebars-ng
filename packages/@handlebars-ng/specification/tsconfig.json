{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "handlebars": ["types/handlebars"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "types/*",
    "types/handlebars/originalAst.d.ts",
    "types/handlebars/originalAst.d.ts"
  ]
}
