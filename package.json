{
  "workspaces": [
    "packages/@handlebars-ng/*",
    "packages/handlebars-ng.knappi.org"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "test:lint": "eslint .",
    "format": "prettier -w .",
    "build": "lerna run build",
    "test-and-build": "node ./scripts/require-same-dependency-versions.mjs && lerna run test-and-build",
    "dev": "lerna run dev --parallel",
    "dev:site": "cd packages/handlebars-ng.knappi.org && yarn dev:server",
    "preview:site": "cd packages/handlebars-ng.knappi.org && yarn preview",
    "prepare": "husky install",
    "deps": "yarn upgrade-interactive",
    "clean": "lerna run clean --parallel"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.5",
    "husky": "8.0.3",
    "lerna": "6.4.1",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{js,ts,css,mdx,md,yaml}": "prettier --write"
  }
}
